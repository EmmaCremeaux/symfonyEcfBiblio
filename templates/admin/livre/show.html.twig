{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>AnneeEdition</th>
                <td>{{ livre.anneeEdition }}</td>
            </tr>
            <tr>
                <th>NombrePage</th>
                <td>{{ livre.nombrePage }}</td>
            </tr>
            <tr>
                <th>CodeIsbn</th>
                <td>{{ livre.codeIsbn }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ livre.createdAt ? livre.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ livre.updatedAt ? livre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Genres</th>
                <td>
                    {% for genre in livre.genres %}
                    <a href="{{ path('app_admin_genre_show', {id: genre.id }) }}">{{ genre.nom }}</a>{% if not loop.last %},{% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>
                    <a href="{{ path('app_admin_auteur_show', {id: livre.auteur.id }) }}">{{ livre.auteur.nom }} {{ livre.auteur.prenom }}</a>
                </td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ livre.deletedAt ? livre.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_index') }}">back to list</a>

    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('admin/livre/_delete_form.html.twig') }}
{% endblock %}
